---
import { getCollection } from "astro:content";
import Project from "./Project.astro";

const collaborativeProjects = await getCollection("collaborativeProjects");
---

<section id="collaborative-projects" class="collaborative-projects">
  <h2>Collaborative Projects</h2>
  <div class="project-container">
    {
      collaborativeProjects.map((project) => (
        <Project
          name={project.data.name}
          description={project.data.description}
          repo_url={project.data.repo_url}
          google_drive_url={project.data.google_drive_url}
          itch_url={project.data.itch_url}
        />
      ))
    }
  </div>
</section>

<style>
  .collaborative-projects {
    max-width: 720px;
    margin: auto;
  }

  .project-container {
    display: flex;
    flex-direction: column;
  }
</style>
