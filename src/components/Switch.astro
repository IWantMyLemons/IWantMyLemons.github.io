---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<label class="switch">
  <input type="checkbox" id={id} />
  <span class="slider"></span>
</label>

<style>
  .switch {
    position: relative;
    display: inline-block;
    height: 32px;
    width: 64px;
    border-radius: 24px;
    transition: 0s;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 16px;
    background-color: var(--surface-0);
    transition: 0.4s;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 24px;
    width: 24px;
    left: 4px;
    bottom: 4px;
    border-radius: 12px;
    background-color: var(--base);
    transition: 0.4s;
  }

  input:checked + .slider {
    background-color: var(--rosewater);
  }

  .switch:has(input:focus) {
    border: 2px solid var(--blue);
  }

  input:focus + .slider,
  input:hover + .slider {
    box-shadow: 0 0 4px var(--rosewater);
  }

  input:checked + .slider:before {
    transform: translateX(32px);
  }
</style>
