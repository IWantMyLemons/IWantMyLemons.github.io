---
import TopBar from "../components/TopBar.astro";
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <script is:inline>
      // setup theming
      const html = document.getElementsByTagName("html")[0];
      const theme = localStorage.getItem("theme") ?? "light";
      html.setAttribute("data-theme", theme);
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Jason Saputra Ang</title>
  </head>
  <body>
    <TopBar />
    <slot />
  </body>
  <script>
    // preserve-search handling
    document.querySelectorAll("a[preserve-search]").forEach(elem => {
      (elem as HTMLAnchorElement).href += window.location.search;
    })

    // UwU alt
    const searchParams = new URLSearchParams(window.location.search);
    const isUwU = searchParams.get("uwu") === "true";

    if (isUwU) {
      document.getElementsByTagName("title")[0].text = "Citrus";
    }
  </script>
</html>
<style is:global>
  @import "../styles/defaults.css";
</style>
<style>
  @import "../styles/theme.css";

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--base);
  }
</style>
